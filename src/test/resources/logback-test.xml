<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder> <pattern>[%highlight(%-5level)] %cyan(%logger{5}): %msg %n</pattern> </encoder>
    </appender> <logger name="application" level="ERROR" />
    <logger name="akka" level="ERROR" />
    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>